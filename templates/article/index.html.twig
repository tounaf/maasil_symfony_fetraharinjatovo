{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <div class="row">
		{% for article in articles %}
            <div class="col-md-6 mb-3">
                <div class="card">
                    <div class="card-header">
						{{ article.titre }}
                    </div>
                    <div class="card-body">
                        <p class="card-text">{{ article.description[:50] }} ...</p>
                        <p><i class="small sm-col-2">Crée le {{ article.createdAt|date('Y-m-d') }}, par {{ article.createBy.username }}</i> <i class="small sm-col-2">

                                <br>Dernière mise à jour : le {{ article.updatedAt|date('Y-m-d') }}</i></p>
                        <a href="{{ path('article_show', {id: article.id}) }}" class="btn btn-primary">Lire la suite</a>
                    </div>
                </div>
            </div>
		{% endfor %}
    </div>
{% endblock %}
